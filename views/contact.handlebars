<!-- views/contact.handlebars -->
<section class="page">
  <h2>Kontakt</h2>
  <p>Har du frågor? Hör av dig.</p>

  <form class="form" method="post" action="#">
    <label>Namn
      <input type="text" name="name" placeholder="Ditt namn" />
    </label>
    <label>E-post
      <input type="email" name="email" placeholder="din@mail.se" />
    </label>
    <label>Meddelande
      <textarea name="message" rows="4" placeholder="Skriv här..."></textarea>
    </label>
    <button type="submit" disabled>TBD</button>
    <small>(Vi kopplar POST senare – just nu bara layout.)</small>
  </form>
</section>